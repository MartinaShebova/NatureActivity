<div class="title-wrapper">
    <h1>Weather in {{this.location.name}} ({{this.location.country}})</h1>
</div>
<div class="common-template-wrapper">
    <div class="common-template-sub-wrapper">
        <div class="breadcrumbs">
            <a href="#/home">Home</a><span class="raquo">»</span>{{this.location.name}} ({{this.location.country}}) - Weather
        </div>
        <div class="container">
            <div class="left-side">
                <div class="content-box">
                    <img src="/static/images/border.png" alt="Stylish border" class="border-pic">
                    <p class="sub-text" id="heading" value={{this.location.name}}><strong>{{this.current.condition.text}}</strong></p>
                    <div class="img-wrapper">
                        <img src="/static/images/weather-conditions.jpg" alt="Event Picture">
                    </div>
                    <p class="text-wrapper">
                        <p>Date: <strong>{{this.forecast.forecastday.0.date}}</strong></p>                        
                        <p>Temperature: <strong>{{this.current.temp_c}}&#8451;</strong></p>
                        <p>Humidity: <strong>{{this.current.humidity}}&#37</strong></p>
                        <p>Sunrise: <strong>{{this.forecast.forecastday.0.astro.sunrise}}</strong></p>
                        <p>Sunset: <strong>{{this.forecast.forecastday.0.astro.sunset}}</strong></p>
                    </p>
                </div>
                <div class="clearfix"></div>
                <div class="content-box">
                    <p class="content-title">Number of comments</p>
                    <div id="comments">
                        <img src="/static/images/border.png" alt="Stylish border" class="border-pic">
                        <div class="clearfix"></div>
                    </div>
                    {{#each this.comments}}
                        <div class="user-img">
                            <img src="/static/images/user-pic.png" alt="Event Picture">
                        </div>
                        <div class="user-comment-box">
                            <p class="user-name">{{this.username}}</p>
                            <div class="user-comment">{{this.comment}}</div>
                        </div>
                    {{/each}}
                    <div class="clearfix"></div>
                    <div class="add-comment-wrapper">
                        <p class="content-title">Leave a comment</p>
                        <img src="/static/images/border.png" alt="Stylish border" class="border-pic">
                        <input type="text" placeholder="Your Name" id="username"/>
                        <textarea name="" id="comment-area" col="30" rows="10" placeholder="Your comment ..."></textarea>
                        <input type="button" value="Add comment" id="add-comment-btn"/>
                    </div>


                </div>
            </div>
